<div class="main-show-page">
  <div class="show-product ">
    <div id="carouselExampleControls" class="carousel slide " data-bs-ride="carousel">
      <div class="carousel-inner ">
        <% if @product.photo_one %>
          <div class="carousel-item active">
            <img src=<%=@product.photo_one_url %> class="d-block " alt="...">
          </div>
        <% end %>
        <% if @product.photo_two %>
          <div class="carousel-item">
            <img src=<%=@product.photo_two_url %> class="d-block " alt="...">
          </div>
        <% end %>
        <% if @product.photo_three %>
          <div class="carousel-item">
            <img src=<%=@product.photo_three_url %> class="d-block " alt="...">
          </div>
        <% end %>
        <% if @product.photo_four %>
          <div class="carousel-item">
            <img src=<%=@product.photo_four_url %> class="d-block "
                                                alt="...">
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>
  <div class="product-description">
    <div class='p-name'>
      <h3>
        <%= @product.name.capitalize %>
      </h3>
      <p class="p-price"> GHS <%= @product.price %>.00</p>
    </div>
    <section class='f-mobile-section'>
      <div class='show-cat-main'>
        <i class="fa fa-snowflake-o show-icon" aria-hidden="true"></i>
        <div class='show-cat-div'>
          <p> <%= @product.condition.capitalize  %> </p>
          <small> condition </small>
        </div>
      </div>
      <div class='show-cat-main'>
        <i class="fa fa-th-large show-icon" aria-hidden="true"></i>
        <div class='show-cat-div'>
          <p> <%= @product.category.capitalize  %> </p>
          <small> category </small>
        </div>
      </div>
      <div class='show-cat-main'>
        <i class="fa fa-home show-icon" aria-hidden="true"></i>
        <div class='show-cat-div'>
          <p> <%= @product.location.capitalize  %> </p>
          <small> location </small>
        </div>
      </div>
    </section>
    <section class='d-m-section'>
      <p class='section-h mb-1'>Description</p>
      <p class='section-d'>
        <%= @product.description %>
      </p>
    </section>
  </div>
  <div class="product-nav ">
    <% if @product.user_id===current_user.id %>
      <%= link_to 'Delete' , product_path(@product), method: :delete ,class: 'remove-btn btn btn-danger rounded-pill ' %>
      <%= link_to 'Edit' , edit_product_path(@product), class: 'btn btn-outline-warning btn-chat rounded-pill' %>
    <% else %>
      <button class="btn btn-call rounded-md"> Call </button>
      <button class="btn btn-chat rounded"> Chat </button>
    <% end %>
  </div>
</div>
