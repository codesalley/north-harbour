<div class="product-card shadow-sm rounded-xl">
    <div class="product-image-container">
        <div id="carouselExampleControls" class="carousel slide w-100 h-100" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% if product.photo_one %>
                    <div class="carousel-item active">
                        <img src=<%=product.photo_one_url %> class="d-block w-100" alt="...">
                    </div>
                    <% end %>
                        <% if product.photo_two %>

                            <div class="carousel-item">
                                <img src=<%=product.photo_two_url %> class="d-block w-100" alt="...">
                            </div>
                            <% end %>
                                <% if product.photo_three %>

                                    <div class="carousel-item">
                                        <img src=<%=product.photo_three_url %> class="d-block w-100" alt="...">
                                    </div>
                                    <% end %>
                                        <% if product.photo_four %>
                                            <div class="carousel-item">
                                                <img src=<%=product.photo_four_url %> class="d-block w-100" alt="...">
                                            </div>

                                            <% end %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

    </div>
    <div class="project-detail">
        <h2 class="product-name">
            <%= product.name %>
        </h2>
        <p class="product-price">
            GHS <%= product.price %>.00
        </p>
        <p class="product-condition">
            <%= product.condition %>
        </p>
        <small class="product-info">
            <%= product.description %>
        </small>
    </div>
</div>