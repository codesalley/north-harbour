<%= form_with(model: product) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :description, "Description" %>
    <%= f.text_field :description %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :location, "Location" %>
    <%= f.text_field :location %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :price, "Price GHS" %>
    <%= f.number_field :price %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :category, "Category" %>
    <%= f.select(:category, @categories) %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :condition, "Type" %>
    <%= f.select(:condition, @condition) %>
  </div>
  <div class="file-div">
    <% if product.photo_one %>
      <div>
        <img src=<%=product.photo_one_url %> class="d-block w-100" alt="...">
        <div>
          <button class='btn'> Delete </button>
          <button> Edit </button>
        </div>
      </div>
    <% end %>
    <% if product.photo_two %>
      <div>
        <img src=<%=product.photo_two_url %> class="d-block w-100" alt="...">
        <div>
          <button class='btn'> Delete </button>
          <button> Edit </button>
        </div>
      </div>
    <% end %>
    <% if product.photo_three %>
      <div>
        <img src=<%=product.photo_three_url %> class="d-block w-100" alt="...">
        <div>
          <button class='btn'> Delete </button>
          <button> Edit </button>
        </div>
      </div>
    <% end %>
    <% if product.photo_four %>
      <div>
        <img src=<%=product.photo_four_url %> class="d-block w-100" alt="...">
        <div>
          <button class='btn'> Delete </button>
          <button> Edit </button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="form-group mb-3">
    <%= f.submit "Submit" , disable_with: 'Submiting...' %>
  </div>
<% end %>
